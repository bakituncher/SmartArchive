<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageViewFileType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/dosya_tipi_konu"
        tools:src="@drawable/ic_file_pdf" /> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="16dp">

    <TextView
        android:id="@+id/textViewFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="?attr/colorOnSurface"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Çok Uzun İsimli Mayıs 2025 Elektrik Faturası Belgesi.pdf" />

    <TextView
        android:id="@+id/textViewFileDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="4dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        tools:text="14 Haziran 2025" />

</LinearLayout>

</LinearLayout>